.homepage
  display flex
  flex-direction column
  gap 40px
  margin 0 auto
  min-height 1000px
  padding 20px
  max-width 1400px
  padding-top 80px
  

.filter-container
  display flex
  flex-wrap wrap
  padding 20px
  border-bottom 1px solid #A89D99
  gap 3px 185px
  
.filter-group
  display flex
  flex-direction column
  gap 8px
  

.search-container
  max-width 500px
  width 100%
  

.search-form
  width 100%
  height 30px
  box-shadow 5px 5px lightblue
  padding 15px
  background rgba(255,255,255,0.85)
  border-radius 12px
  display flex
  gap 10px

.search-form input
  width 100%
  padding 10px 15px
  font-size 15px
  border-radius 8px
  border 1px solid #ccc

.date-picker
  display flex
  gap 15px
  padding-right 10px

.date-picker button
  font-size 15px
  width 110px
  height 60px
  padding 10px 15px
  border-radius 8px
  border 1px solid #ccc
  box-shadow 5px 5px lightblue
  cursor pointer

@media (max-width: 600px)
 .date-picker button
   font-size 12px
   width 90px
   height 60px

  

.filter-today-games
  display flex
  gap 15px

.filter-today-games button
  font-size 15px
  width 110px
  height 60px
  padding-rigth 15px
  border-radius 8px
  border 1px solid #ccc
  box-shadow 5px 5px lightblue
  cursor pointer
  color red
  
.filter-today-games button:hover
  background #f9f6ef
  border 2px solid gray

.filter-today-games button:disabled
  background #e5e5e5
  cursor default  

.date-picker button:hover
  background #f9f6ef
  border 2px solid gray

.date-picker button:disabled
  background #e5e5e5
  cursor default

.no-results
  text-align center