.footer
  position fixed
  bottom 0
  background #110f0fff
  color #fff
  padding 10px 20px
  font-size 15px
  width 100%
  box-shadow 0px -8px 20px rgba(73, 45, 45, 0.3)
  .footer-container
    display flex
    flex-wrap wrap
    justify-content space-evenly
    align-items center
    max-width 1200px
    margin 0 auto
  a
    color #fff
    text-decoration none
    margin 0 10px
    &:hover
      text-decoration underline
  .footer-left,
  .footer-center
    margin: 5px 0
    display flex
    justify-content center

// Responsive
@media (max-width: 768px)
  .footer-container
    flex-direction column
    align-items center
    text-align center
  .footer-center,
  .footer-right
    margin-top 10px
