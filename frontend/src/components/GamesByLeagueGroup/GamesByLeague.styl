.games-container
  display grid
  gap 20px
  grid-template-columns repeat(3, 1fr)
  

@media (max-width: 1024px)
  .games-container
    grid-template-columns repeat(2, 1fr)

@media (max-width: 600px)
  .games-container
    grid-template-columns 1fr

.league-group
  margin-bottom 80px
  

.league-header
  display flex
  align-items center
  gap 10px
  font-size 20px
  font-weight bold
  margin-bottom 30px
  box-shadow 0px 10px 18px rgba(0,0,0,0.15)

.league-icon
  width 35px
  height 35px
  object-fit contain

.league-country
  font-size 14px
  color gray

.league-header.is-loading span,
.league-header.is-loading .league-icon
  background linear-gradient(
    90deg,
    #e8e8e8 25%,
    #f3f3f3 37%,
    #e8e8e8 63%
  )
  background-size 400% 100%
  animation shimmer 1.4s ease infinite
  color transparent
  border-radius 4px

.league-header.is-loading .league-icon
  width 35px
  height 35px

.league-header.is-loading .league-name
  width 160px
  height 18px
