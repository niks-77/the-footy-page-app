.game-item
  display flex
  flex-direction column
  align-items auto
  justify-content space-between
  box-shadow 5px 5px lightblue


  gap 1px
  padding 10px 10px
  flex 1 1 300px
  min-width 320px
  max-width 400px
  background #ffffff
  border-radius 10px
  border 1px solid #e5e5e5

  transition transform 0.15s ease, background 0.15s ease

.game-item:hover
  cursor pointer
  background #f9f6ef
  transform translateY(-10px)
  box-shadow 10px 10px 5px #aaaaaa;

.team
  display flex
  align-items right
  justify-content space-between
  gap 10px
  min-width 160px
  

.team img
  width 35px
  height 35px
  object-fit contain

.team-name
  font-size 15px
  font-weight 600
  color #333
  max-width 150px
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

.score
  font-size 17px
  font-weight 700
  color #462a2aff
  
.finished
  display flex
  justify-content right
  color #888
  font-weight 600
  font-size 15px

.kickoff-time
  display flex
  font-size 14px
  font-weight 600
  color #3d7bff
  min-width 50px
  text-align center
  justify-content right

.live-indicator
  display flex
  align-items center
  justify-content right
  gap 6px

.live-dot
  width 8px
  height 8px
  border-radius 50%
  background #ff2e2e
  box-shadow 0 0 8px rgba(255, 50, 50, 0.9)
  animation pulse 2s infinite ease-in-out

.live-text
  font-size 13px
  font-weight 700
  color #ff4d4d

@keyframes pulse
  0%
    transform scale(0.9)
    opacity 0.7
  50%
    transform scale(1.3)
    opacity 1
  100%
    transform scale(0.9)
    opacity 0.7

@keyframes blink
  0%, 100%
    opacity 1
  50%
    opacity 0.25

.game-item.is-loading
  pointer-events none

.game-item.is-loading img
  display none

.game-item.is-loading .team-name,
.game-item.is-loading .score,
.game-item.is-loading .kickoff-time,
.game-item.is-loading .team-logo
  background linear-gradient(
    90deg,
    #e8e8e8 25%,
    #f3f3f3 37%,
    #e8e8e8 63%
  )
  background-size 400% 100%
  animation shimmer 1.4s ease infinite
  color transparent
  border-radius 4px

.team-logo
  width 35px
  height 35px

@keyframes shimmer
  0%
    background-position 100% 0
  100%
    background-position -100% 0

