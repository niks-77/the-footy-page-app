.modal-backdrop
  position fixed
  inset 0
  background rgba(0, 0, 0, 0.6)
  display flex
  justify-content center
  align-items center
  z-index 1000
  padding 20px

.modal-backdrop
  animation fadeIn 0.25s ease forwards

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1


.modal-content
  animation popIn 0.3s ease forwards

@keyframes popIn
  from
    opacity 0
    transform scale(0.95) translateY(10px)
  to
    opacity 1
    transform scale(1) translateY(0)

.modal-content
  background white
  border-radius 16px
  width 100%
  max-width 900px
  max-height 90vh
  overflow-y auto
  box-shadow 0 10px 30px rgba(0,0,0,0.3)
  position relative


.close-btn
  position absolute
  top 14px
  right 14px
  border none
  background transparent
  font-size 15px
  cursor pointer
  font-weight bold

  &:hover
    background #ebebeb

.game-details
  max-width 900px
  margin 40px auto
  padding 20px
  background white
  border-radius 14px
  box-shadow 0 5px 18px rgba(0, 0, 0, 0.15)

.head-to-head
  display flex
  justify-content space-between
  align-items center
  font-size 22px
  font-weight 600
  padding 20px
  border-bottom 1px solid #e1e1e1

.detTeam
  display flex
  align-items center
  gap 10px

.detTeam img
  width 55px
  height 55px
  border-radius 50%

.stats
  margin-top 25px
  display flex
  flex-direction column
  gap 14px

.stats-row
  display flex
  justify-content space-between
  align-items center
  font-size 18px
  background #f7f7f7
  padding 12px 18px
  border-radius 10px
  transition background 0.2s ease

  &:hover
    background #ebebeb

  span:first-child
    color #006400
    background-color rgba(0, 100, 0, 0.1)
    border-radius 6px
    padding 4px 6px

  span:last-child
    color #8B0000
    background-color rgba(139, 0, 0, 0.1)
    border-radius 6px
    padding 4px 6px

p 
  text-align center
  padding 5px

